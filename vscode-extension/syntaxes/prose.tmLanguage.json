{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "OpenProse",
  "scopeName": "source.prose",
  "fileTypes": [
    "prose"
  ],
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#triple-string"
    },
    {
      "include": "#double-string"
    },
    {
      "include": "#multiline-discretion"
    },
    {
      "include": "#inline-discretion"
    },
    {
      "include": "#control-keywords"
    },
    {
      "include": "#declaration-keywords"
    },
    {
      "include": "#binding-keywords"
    },
    {
      "include": "#property-keywords"
    },
    {
      "include": "#pipeline-keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#model-constants"
    },
    {
      "include": "#join-strategy-constants"
    },
    {
      "include": "#on-fail-policy-constants"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "binding-keywords": {
      "name": "keyword.other.binding.prose",
      "match": "\\b(import|from|let|const)\\b"
    },
    "comment": {
      "name": "comment.line.number-sign.prose",
      "match": "#.*$"
    },
    "control-keywords": {
      "name": "keyword.control.prose",
      "match": "\\b(do|parallel|choice|loop|until|while|repeat|for|in|as|if|elif|else|option|try|catch|finally|throw)\\b"
    },
    "declaration-keywords": {
      "name": "keyword.declaration.prose",
      "match": "\\b(agent|session|block)\\b"
    },
    "double-string": {
      "name": "string.quoted.double.prose",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-escapes"
        },
        {
          "include": "#string-interpolation"
        }
      ]
    },
    "identifiers": {
      "name": "variable.other.prose",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
    },
    "inline-discretion": {
      "name": "markup.italic.discretion.inline.prose",
      "begin": "\\*\\*",
      "end": "\\*\\*"
    },
    "join-strategy-constants": {
      "name": "constant.language.join.prose",
      "match": "\"(all|first|any)\""
    },
    "model-constants": {
      "name": "constant.language.model.prose",
      "match": "\\b(sonnet|opus|haiku)\\b"
    },
    "multiline-discretion": {
      "name": "markup.italic.discretion.multiline.prose",
      "begin": "\\*\\*\\*",
      "end": "\\*\\*\\*"
    },
    "numbers": {
      "name": "constant.numeric.prose",
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
    },
    "on-fail-policy-constants": {
      "name": "constant.language.policy.prose",
      "match": "\"(fail-fast|continue|ignore)\""
    },
    "operators": {
      "name": "keyword.operator.prose",
      "match": "->|\\||="
    },
    "pipeline-keywords": {
      "name": "keyword.operator.pipeline.prose",
      "match": "\\b(map|filter|reduce|pmap)\\b"
    },
    "property-keywords": {
      "name": "keyword.other.property.prose",
      "match": "\\b(model|prompt|retry|backoff|skills|permissions|context)\\b"
    },
    "punctuation": {
      "name": "punctuation.prose",
      "match": ":|,|\\(|\\)|\\[|\\]|\\{|\\}"
    },
    "string-escapes": {
      "name": "constant.character.escape.prose",
      "match": "\\\\[nrt\\\\\"0]|\\\\u[0-9a-fA-F]{4}"
    },
    "string-interpolation": {
      "name": "meta.string-interpolation.openprose",
      "match": "(\\{)([a-zA-Z_][a-zA-Z0-9_-]*)(\\})",
      "captures": {
        "1": {
          "name": "punctuation.definition.interpolation.begin.prose"
        },
        "2": {
          "name": "variable.other.interpolation.prose"
        },
        "3": {
          "name": "punctuation.definition.interpolation.end.prose"
        }
      }
    },
    "triple-string": {
      "name": "string.quoted.triple.prose",
      "begin": "\"\"\"",
      "end": "\"\"\"",
      "patterns": [
        {
          "include": "#string-escapes"
        },
        {
          "include": "#string-interpolation"
        }
      ]
    }
  }
}