{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "OpenProse",
  "scopeName": "source.prose",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#discretion" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.prose",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.prose",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.prose" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.prose" }
          },
          "patterns": [
            { "include": "#string-escapes" },
            { "include": "#string-interpolation" }
          ]
        },
        {
          "name": "string.quoted.double.prose",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.prose" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.prose" }
          },
          "patterns": [
            { "include": "#string-escapes" },
            { "include": "#string-interpolation" }
          ]
        }
      ]
    },
    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.prose",
          "match": "\\\\[nrt\\\\\"0]"
        },
        {
          "name": "constant.character.escape.unicode.prose",
          "match": "\\\\u[0-9a-fA-F]{4}"
        },
        {
          "name": "invalid.illegal.escape.prose",
          "match": "\\\\."
        }
      ]
    },
    "string-interpolation": {
      "patterns": [
        {
          "name": "meta.embedded.interpolation.prose",
          "match": "(\\{)([a-zA-Z_][a-zA-Z0-9_-]*)(\\})",
          "captures": {
            "1": { "name": "punctuation.definition.interpolation.begin.prose" },
            "2": { "name": "variable.other.interpolation.prose" },
            "3": { "name": "punctuation.definition.interpolation.end.prose" }
          }
        }
      ]
    },
    "discretion": {
      "patterns": [
        {
          "name": "markup.italic.discretion.multiline.prose",
          "begin": "\\*\\*\\*",
          "end": "\\*\\*\\*",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.discretion.begin.prose" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.discretion.end.prose" }
          }
        },
        {
          "name": "markup.italic.discretion.inline.prose",
          "begin": "\\*\\*",
          "end": "\\*\\*",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.discretion.begin.prose" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.discretion.end.prose" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.prose",
          "match": "\\b(if|elif|else|try|catch|finally|throw|loop|while|until|repeat|for|in|as|choice|option)\\b"
        },
        {
          "name": "keyword.control.parallel.prose",
          "match": "\\b(parallel|do)\\b"
        },
        {
          "name": "keyword.other.import.prose",
          "match": "\\b(import|from)\\b"
        },
        {
          "name": "keyword.declaration.prose",
          "match": "\\b(agent|session|block)\\b"
        },
        {
          "name": "keyword.other.binding.prose",
          "match": "\\b(let|const)\\b"
        },
        {
          "name": "keyword.other.property.prose",
          "match": "\\b(model|prompt|skills|permissions|context|retry|backoff)\\b"
        },
        {
          "name": "keyword.operator.pipeline.prose",
          "match": "\\b(map|filter|reduce|pmap)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.prose",
          "match": "->"
        },
        {
          "name": "keyword.operator.pipe.prose",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.assignment.prose",
          "match": "="
        },
        {
          "name": "punctuation.separator.colon.prose",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.prose",
          "match": ","
        },
        {
          "name": "punctuation.brackets.round.prose",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.square.prose",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.brackets.curly.prose",
          "match": "[{}]"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.prose",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.model.prose",
          "match": "\\b(sonnet|opus|haiku)\\b"
        },
        {
          "name": "constant.language.policy.prose",
          "match": "\\b(allow|deny|prompt)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.prose",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
        }
      ]
    }
  }
}
